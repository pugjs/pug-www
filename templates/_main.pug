doctype

include _menu.pug

html(lang=lang)
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="msapplication-config", content="/images/browserconfig.xml")
    meta(name="theme-color", content="#ffffff")
    link(rel="apple-touch-icon", sizes="180x180", href="/images/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/images/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/images/favicon-16x16.png")
    link(rel="manifest", href="/images/manifest.json")
    link(rel="mask-icon", href="/images/safari-pinned-tab.svg", color="#5bbad5")
    link(rel="shortcut icon", href="/images/favicon.ico")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Arvo:400,400italic,700,700italic|PT+Sans:400,400italic,700,700italic")
    link(rel="stylesheet" href="/css/style.css")
    title #{attributes.title} &ndash; Pug

  body
    aside.menu.outside
      // CSS gurus requested
      a.toggle: img(src='/images/menu-tab.svg')
      +menu

    nav.navbar.navbar-full.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='/') pug
        ul.nav.navbar-nav
          li.nav-item.active
            a.nav-link(href=relative(dirname(id), 'api/getting-started.html'))= _.navbar.docs
          //- li.nav-item
          //-   a.nav-link(href=relative(dirname(id), 'demo.html'))= _.navbar.demo
          li.nav-item
            a.nav-link(href='https://github.com/pugjs/pug') GitHub

    .container
      block content

    block after
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

